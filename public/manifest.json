{
  "manifest_version": 3,

  "name": "Xbox Cloud Gaming (xCloud) Keyboard & Mouse",
  "short_name": "xCloud KB&M",
  "description": "No controller? No problem! Use a keyboard and mouse with Xbox Cloud Gaming (Project xCloud) in your browser.",
  "version": "1.0",
  "author": "David Idol",

  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    },
    "default_popup": "popup.html",
    "default_title": "xCloud mouse and keyboard"
  },

  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://www.xbox.com/en-US/play/*",
        "https://gamepad-tester.com/"
      ],
      "js": [
        "js/content_script.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "js/injected.js",
        "images/keyboard.svg",
        "images/xbox-logo.svg",
        "css/injected.css"
      ],
      "matches": [
        "https://www.xbox.com/*",
        "https://gamepad-tester.com/*"
      ]
    }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage"
  ]
}
